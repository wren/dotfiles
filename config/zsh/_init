
# these files are loaded in this order
my_dotfiles=(
  xdg
  motd
  prompt
  shell_config
  path
  plugin_manager
  env
  vim
  theme
  aliases
  functions
  misc
  completion
  extra
  load_host
)

for my_file in $my_dotfiles; do
  [[ -r "$ZDOTDIR/$my_file" ]] && source "$ZDOTDIR/$my_file"
done

export DOTFILES_LOADED=1
