# dissallow dupes on the path
typeset -U path

path=(
  # our local shenanigans get priority
  ~/.local/bin

  # node.js to the front(ish) of the line
  ${N_PREFIX}/bin
  /usr/local/share/npm/bin

  # also ruby for some reason
  /usr/local/opt/ruby/bin

  # then Homebrew comes next
  /usr/local/bin
  /usr/local/sbin
  /usr/local/Cellar

  # use coreutils without prefix of g (e.g. ls instead of gls)
  /usr/local/opt/coreutils/libexec/gnubin
  /usr/local/opt/findutils/libexec/gnubin
  /usr/local/opt/gnu-tar/libexec/gnubin
  /usr/local/opt/gnu-sed/libexec/gnubin
  /usr/local/opt/gnu-indent/libexec/gnubin
  /usr/local/opt/gnu-which/libexec/gnubin
  /usr/local/opt/gnu-getopt/bin
  /usr/local/opt/grep/libexec/gnubin
  /usr/local/opt/util-linux/bin
  /usr/local/opt/util-linux/sbin

  # use other utils that aren't regularly linked
  /usr/local/opt/terraform@0.13/bin
  /usr/local/opt/postgresql@11/bin

  # ugh, Poetry doesn't let us change config path
  ~/.local/share/poetry/bin

  # also Ruby, I guess
  /usr/local/lib/ruby/gems/2.7.0/bin
  /usr/local/opt/ruby/bin

  # default path
  $path

  # fzf (fuzzy file completion)
  /usr/local/opt/fzf/bin
)

