
# fzf (fuzzy file completion)
[[ $- == *i* ]] && source "/usr/local/opt/fzf/shell/completion.zsh" 2> /dev/null # Auto-completion
source "/usr/local/opt/fzf/shell/key-bindings.zsh" # Key bindings
export FZF_DEFAULT_OPTS='--height 40% --layout=reverse'

# custom fzf-history widget (dedupes entries)
fzf-history-widget() {
  local selected num
  setopt localoptions noglobsubst noposixbuiltins pipefail 2> /dev/null
  selected=( $(fc -rl 1 |
    sort -k2 -k1rn | uniq -f 1 | sort -r -n |
    FZF_DEFAULT_OPTS="--height ${FZF_TMUX_HEIGHT:-40%} $FZF_DEFAULT_OPTS -n2..,.. --tiebreak=index --bind=ctrl-r:toggle-sort $FZF_CTRL_R_OPTS --query=${(qqq)LBUFFER}${RBUFFER} +m" $(__fzfcmd)) )
  local ret=$?
  if [ -n "$selected" ]; then
    num=$selected[1]
    if [ -n "$num" ]; then
      zle vi-fetch-history -n $num
    fi
  fi
  zle reset-prompt
  return $ret
}

# Make pipx use pyenv
export PIPX_DEFAULT_PYTHON="$PYENV_ROOT/shims/python"

BACKUPS_CONFIG="$XDG_CONFIG_HOME/backups/config.yaml"
export RESTIC_PASSWORD_COMMAND="yq e .restic.passphrase '$BACKUPS_CONFIG'"
export RESTIC_REPOSITORY="$(yq e .restic.repo "$BACKUPS_CONFIG" | sed "s!^~!$HOME!")"

# direnv
eval "$(direnv hook zsh)"
