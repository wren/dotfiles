[mergetool "diffconflicts"]
  cmd = diffconflicts nvim \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
  trustExitCode = true
  keepBackup = false

[merge]
  tool = diffconflicts
  conflictstyle = merge

[mergetool]
  keepBackup = false

[diff "image"]
  command = git-image-diff

[pager]
  dfi = false
  dfp = false

[diff "plist"]
  textconv = plutil -convert xml1 -r -o -

[diff "pandoc"]
  textconv=pandoc --to=markdown
  prompt = false
