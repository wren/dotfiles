[core]
  pager = diff-so-fancy | less -F

[mergetool "smerge"]
  cmd = smerge mergetool \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
  trustExitCode = true

[merge]
  tool = smerge
  conflictstyle = merge

[mergetool]
  keepBackup = false

[pager]
  dfi = false
  dfp = false
  diff = diff-so-fancy | less -F
  show = diff-so-fancy | less -F

[diff "image"]
  textconv = exiftool -@ ~/.config/git/misc/exiftool-args

[diff "plist"]
  textconv = plutil -convert xml1 -r -o -

[diff "pandoc"]
  textconv = pandoc --to=markdown
  prompt = false

[diff "sops"]
  textconv = "sops -d"

[interactive]
  diffFilter = diff-so-fancy --patch
  singleKey = true

[diff-so-fancy]
  markEmptyLines = true
  changeHunkIndicators = true
  stripLeadingSymbols = true
  useUnicodeRuler = true
  rulerWidth = 88
